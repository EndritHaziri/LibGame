<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.endrithaziri.libgame">

    <uses-permission android:name="android.permission.MANAGE_DOCUMENTS" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Home"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GamePage"
            android:label="Game Page" />
        <activity
            android:name=".AddEvaluation"
            android:label="@string/title_activity_add_evaluation" />
        <activity
            android:name=".AddGame"
            android:label="@string/title_activity_add_game" />
        <activity
            android:name=".AddDeveloper"
            android:label="@string/title_activity_add_developer" />
        <activity
            android:name=".AddPublisher"
            android:label="@string/title_activity_add_publisher" />
        <activity
            android:name=".EditGame"
            android:label="@string/title_activity_edit_game" />
        <activity
            android:name=".EditDeveloper"
            android:label="@string/title_activity_edit_developer" />
        <activity
            android:name=".EditPublisher"
            android:label="@string/title_activity_edit_publisher" />
        <activity
            android:name=".Settings"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".About"
            android:label="@string/title_activity_about" />
        <activity
            android:name=".ChangeLanguage"
            android:label="Change Language" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"></activity>
    </application>

</manifest>